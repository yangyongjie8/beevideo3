<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/rank_txt"
        android:layout_width="@dimen/dip_50"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_marginLeft="@dimen/dip_30"
        android:maxLines="1"
        android:paddingTop="@dimen/dip_10"
        android:text="排名"
        android:textColor="@color/gray_black"
        android:textSize="@dimen/txt_24" />

    <ImageView
        android:id="@+id/team_icon"
        android:layout_width="0dp"
        android:layout_height="@dimen/dip_60"
        android:layout_marginTop="@dimen/dip_10"
        android:layout_marginBottom="@dimen/dip_10"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/teamname_txt"
        android:layout_width="@dimen/dip_260"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dip_10"
        android:paddingLeft="@dimen/dip_20"
        android:gravity="left"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="纽卡斯尔"
        android:textColor="@color/gray_black"
        android:textSize="@dimen/txt_24" />

    <TextView
        android:id="@+id/win_txt"
        android:layout_width="@dimen/dip_200"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dip_10"
        android:gravity="left"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="胜"
        android:textColor="@color/gray_black"
        android:textSize="@dimen/txt_24" />

    <TextView
        android:id="@+id/lost_txt"
        android:layout_width="@dimen/dip_200"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dip_10"
        android:gravity="left"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="负"
        android:textColor="@color/gray_black"
        android:textSize="@dimen/txt_24"  />

    <TextView
        android:id="@+id/score_txt"
        android:layout_width="@dimen/dip_200"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dip_10"
        android:gravity="left"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="胜率"
        android:textColor="@color/gray_black"
        android:textSize="@dimen/txt_24"/>
</LinearLayout>
