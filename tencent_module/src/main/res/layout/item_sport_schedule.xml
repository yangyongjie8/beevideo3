<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dip_63_5"
    android:layout_gravity="center_vertical"
    android:background="@color/black"
    android:gravity="center_vertical"
    android:minHeight="@dimen/dip_63_5">

    <TextView
        android:id="@+id/date_txt"
        android:layout_width="@dimen/dip_173"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dip_43"
        android:gravity="center_vertical"
        android:text="9/29"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_23" />

    <TextView
        android:id="@+id/time_txt"
        android:layout_width="@dimen/dip_173"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dip_181"
        android:gravity="center_vertical"
        android:text="9:00"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_23"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/team1_icon"
        android:layout_width="@dimen/dip_61_5"
        android:layout_height="@dimen/dip_61_5"
        android:layout_marginStart="@dimen/dip_395"
        android:scaleType="fitCenter"
        android:src="@drawable/index_default_postersbg" />

    <TextView
        android:id="@+id/name1_txt"
        android:layout_width="@dimen/dip_280"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dip_508"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="纽卡斯尔"
        android:textColor="@color/half_white"
        android:textSize="@dimen/txt_23" />

    <ImageView
        android:layout_width="@dimen/dip_37"
        android:layout_height="@dimen/dip_37"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dip_650"
        android:scaleType="fitCenter"
        android:src="@drawable/vs" />

    <ImageView
        android:id="@+id/team2_icon"
        android:layout_width="@dimen/dip_61_5"
        android:layout_height="@dimen/dip_61_5"
        android:layout_marginStart="@dimen/dip_770"
        android:scaleType="fitCenter"
        android:src="@drawable/index_default_postersbg" />

    <TextView
        android:id="@+id/name2_txt"
        android:layout_width="@dimen/dip_280"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dip_868"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="纽卡斯尔"
        android:textColor="@color/half_white"
        android:textSize="@dimen/txt_23" />
</RelativeLayout>
