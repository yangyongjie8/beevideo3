<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#bec1cc"
    android:orientation="vertical">

    <include layout="@layout/item_sports_score" />

    <TextView
        android:id="@+id/title"
        android:layout_marginLeft="@dimen/dip_80"
        android:layout_marginTop="@dimen/dip_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="精彩集锦"
        android:textSize="@dimen/dip_30" />

    <ListView
        android:id="@+id/lv_sports_score"
        android:layout_marginLeft="@dimen/dip_80"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dip_30" />
</LinearLayout>
