<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dip_63_5"
    android:layout_gravity="center_vertical"
    android:background="@color/black"
    android:minHeight="@dimen/dip_63_5">

    <TextView
        android:id="@+id/rank_txt"
        android:layout_width="@dimen/dip_50"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dip_41"
        android:gravity="center"
        android:text="1"
        android:textColor="#80ffffff"
        android:textSize="@dimen/txt_23" />

    <ImageView
        android:id="@+id/rank_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dip_52"
        android:background="@drawable/transparent"
        android:gravity="center" />

    <ImageView
        android:id="@+id/team_icon"
        android:layout_width="@dimen/dip_63_5"
        android:layout_height="@dimen/dip_63_5"
        android:layout_marginLeft="@dimen/dip_211"
        android:scaleType="fitCenter"
        android:src="@drawable/transparent" />

    <TextView
        android:id="@+id/teamname_txt"
        android:layout_width="@dimen/dip_200"
        android:layout_height="@dimen/dip_63_5"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dip_323"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:text="纽卡斯尔"
        android:textColor="#80ffffff"
        android:textSize="@dimen/txt_23" />

    <TextView
        android:id="@+id/win_txt"
        android:layout_width="@dimen/dip_200"
        android:layout_height="@dimen/dip_63_5"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dip_650"
        android:gravity="center_vertical"
        android:text="60"
        android:textColor="#80ffffff"
        android:textSize="@dimen/txt_23" />

    <TextView
        android:id="@+id/lost_txt"
        android:layout_width="@dimen/dip_200"
        android:layout_height="@dimen/dip_63_5"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dip_800"
        android:gravity="center_vertical"
        android:text="24"
        android:textColor="#80ffffff"
        android:textSize="@dimen/txt_23" />

    <TextView
        android:id="@+id/score_txt"
        android:layout_width="@dimen/dip_200"
        android:layout_height="@dimen/dip_63_5"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dip_940"
        android:gravity="center_vertical"
        android:text="24%"
        android:textColor="#80ffffff"
        android:textSize="@dimen/txt_23" />
</RelativeLayout>
