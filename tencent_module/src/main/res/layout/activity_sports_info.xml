<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="@dimen/dip_155"
        android:layout_height="@dimen/dip_155"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dip_30"
        android:scaleType="fitXY"
        android:src="@drawable/transparent" />

    <ListView
        android:id="@+id/lv_sport_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dip_5"
        android:layout_toLeftOf="@+id/image_logo"
        android:divider="@null" />
</RelativeLayout>
