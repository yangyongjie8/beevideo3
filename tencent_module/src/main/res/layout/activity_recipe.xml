<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/review_shortvideo_bg"
    android:orientation="horizontal">

    <WebView
        android:id="@+id/web"
        android:layout_width="@dimen/dip_843"
        android:layout_height="fill_parent"
        android:focusable="false" />

    <RelativeLayout
        android:id="@+id/lv_layout"
        android:layout_width="@dimen/dip_442"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="#5e000000">

        <ListView
            android:id="@+id/lv_imagetext"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/dip_66"
            android:layout_marginTop="@dimen/dip_66"
            android:clickable="true"
            android:divider="@null"
            android:listSelector="@drawable/recipe_list_selector"
            android:dividerHeight="@dimen/dip_15"
            android:focusable="true"
            android:scrollbarSize="@dimen/dip_3"
            android:scrollbarThumbVertical="@drawable/sidebar"
            android:scrollbarTrackVertical="@drawable/sidebarbg"
            android:transcriptMode="alwaysScroll"
            android:verticalScrollbarPosition="left" />
    </RelativeLayout>
</LinearLayout>